@model FinalProject.Models.HomeViewModel

<html>

    <head>
        <meta charset="UTF-8">
        <link href="~/Styles/Home.css" rel="stylesheet" />
        <link href="~/Styles/favicon.ico" rel="shortcut icon">

        <title>Login</title>
    </head>

    <body>
        <script src="~/Scripts/jquery-2.1.1.min.js"></script>
        <script src="~/Scripts/jquery-ui.min.js"></script>
        <script src="~/Scripts/Home.js"></script>
        
        <header>
            <h1>Welcome to Cuyahoga Community College Student Services Online</h1>

        </header>
        

        <main class="home">
    
            <p class="par1">
                Cuyahoga Community College recognizes students` rights to access personal and academic records
                in accordance with the Family Educational Rights and Privacy Act of 1974 (FERPA) as amended by Public Law 93-568.</p>

            <form class="homeForm1">
                <p class="formPar1">Already have an account with us?<br />
                Returning users may log in by entering<br />
                their site username and password.</p>
                
                <label>Username:</label> <input type="text" name="Username" class="Uname" /><br />
                <label>Password:</label> <input type="text" name="Password" class="Pword"/><br />
                <button class="loginButton1">Log in</button> 
                
                <div class="horizLine"></div>

                <p class="formPar2">New users, please create a<br /> new account by providing us<br />
                 with some basic information</p>
                
                <label>Username:</label> <input type="text" name="Username" /><br />
                <label>Password:</label> <input type="text" name="Password" /><br />
                <label>E-Mail Address:</label> <input type="text" name="Email" /><br />
                <label>Repeat E-Mail Address:</label> <input type="text" name="Email" /><br />
                <button class="loginButton2">Create Account</button>
                
           
               <!-- Email Address <input type="text" name="Email"/><button class="formButton">Update</button><br />
                Current GPA <input type="text" name="GPA" /><button class="formButton">Update</button> -->

            </form>
        
        
        
        
        
        </main>

        <footer>
            <p>Cuyahoga Community College</p>
            <p>700 Carnegie Avenue, Cleveland, Ohio 44115</p>
        </footer>
    </body>

</html>